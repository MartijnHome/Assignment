{% extends 'base.html.twig' %}

{% block title %}Blog index{% endblock %}

{% block content %}
    <h1 class="text-2xl mb-10">
        Blog index
    </h1>

    {% for blog in paginator.results %}
        <a href="{{ path('app_blog_show', {'id': blog.id}) }}"
           class="hover:text-amber-600"
        >
            <div class="mb-32">
                <img class="h-80 w-full rounded-2xl rounded-2xl"
                     src="{{ asset('uploads/blog/image/' ~ blog.getMainImage()) }}"
                >

                <h1 class="text-2xl my-2">
                    {{ blog.title }}
                </h1>

                <h2 class="text-lg my-2">
                    {{ blog.subtitle }}
                </h2>

                <p>
                    Gemaakt door {{ blog.user.name }}
                    op {{ blog.publishDate ? blog.publishDate|date('Y-m-d H:i:s') : '' }}
                </p>
            </div>
        </a>
    {% else %}
        <p>No blogs found</p>
    {% endfor %}

    {% if paginator.hasToPaginate %}
        <div class="navigation text-center">
            <ul class="pagination">
                {% if paginator.hasPreviousPage %}
                    <li class="prev"><a href="{{ path('app_blog_paginated', {page: paginator.previousPage}) }}" rel="previous"><i class="fa fw fa-long-arrow-left"></i> {{ 'paginator.previous'|trans }}</a></li>
                {% else %}
                    <li class="prev disabled"><span><i class="fa fw fa-arrow-left"></i> {{ 'paginator.previous'|trans }}</span></li>
                {% endif %}

                {% for i in 1..paginator.lastPage %}
                    {% if i == paginator.currentPage %}
                        <li class="active"><span>{{ i }} <span class="sr-only">{{ 'paginator.current'|trans }}</span></span></li>
                    {% else %}
                        <li><a href="{{ path('app_blog_paginated', {page: i}) }}">{{ i }}</a></li>
                    {% endif %}
                {% endfor %}

                {% if paginator.hasNextPage %}
                    <li class="next"><a href="{{ path('app_blog_paginated', {page: paginator.nextPage}) }}" rel="next">{{ 'paginator.next'|trans }} <i class="fa fw fa-arrow-right"></i></a></li>
                {% else %}
                    <li class="next disabled"><span>{{ 'paginator.next'|trans }} <i class="fa fw fa-arrow-right"></i></span></li>
                {% endif %}
            </ul>
        </div>
    {% endif %}
{% endblock %}
