{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block content %}
    <img class="h-80 w-full rounded-2xl rounded-2xl"
         src="{{ asset('uploads/blog/image/' ~ blog.getMainImage()) }}"
    >

    <h1 class="text-2xl my-2">
        {{ blog.title }}
    </h1>

    <h2 class="text-lg my-2">
        {{ blog.subtitle }}
    </h2>

    <p class="my-4">
        {{ blog.text }}
    </p>

    <div class="flex flex-wrap gap-4 mb-10">
        {% for image in images %}
            <a href="{{ asset('uploads/blog/image/' ~ image) }}"
               target="_blank"
            >
                <img class="w-32 h-32 rounded-2xl hover:animate-pulse"
                     src="{{ asset('uploads/blog/image/' ~ image) }}"
                >
            </a>
        {% endfor %}
    </div>

    <p>
        Made by {{ blog.user.name}} on {{ blog.publishDate ? blog.publishDate|date('Y-m-d H:i:s') : '' }}
    </p>

    <hr class="color-black">

    <h1 class="text-2xl mt-10 ">Comments</h1>
    <div class="divide-y divide-amber-600">
        {% for commentary in commentaries %}
            <div class="flex w-full pl-16 py-2">
                <div class="flex-none w-2/12">
                    {{ commentary.user.name }}
                </div>
                <div class="flex-none">
                    {{ commentary.text }}
                </div>
                <div class="flex-auto">

                </div>
                <div class="flex">

                        {% if app.user == commentary.user %}

                        <a href="{{ path('app_commentary_edit', {'id': commentary.id}) }}"
                           class="hover:text-amber-600"
                        >
                            <button class="bg-sky-800 text-white p-2 rounded-xl mx-2">
                                Edit
                            </button>
                        </a>
                        <form method="post"
                              action="{{ path('app_commentary_delete', {'id': commentary.id}) }}"
                              onsubmit="return confirm('Are you sure you want to delete this comment?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commentary.id) }}">
                            <button class="btn bg-red-800 text-white p-2 rounded-xl mx-2">
                                Delete
                            </button>
                        </form>
                    {% endif %}
                </div>
            </div>
        {% else %}
            Be the first to comment this blog!
        {% endfor %}
    </div>


    <h1 class="mt-10 text-2xl">Add your comments</h1>
    {{ form(commentary_form) }}

    <a href="{{ path('app_blog_index') }}">back to list</a>

{% endblock %}
