{% extends 'base.html.twig' %}

{% block title %}Edit Blog{% endblock %}

{% block content %}
    {% for flash_error in app.flashes('upload_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1 class="text-2xl">Edit your blog</h1>
    <h2 class="text-xl">Preview: </h2>
    <img class="h-80 w-full rounded-2xl rounded-2xl"
         src="{{ asset('uploads/blog/image/' ~ blog.getMainImage()) }}"
    >

    <h1 class="text-2xl my-2">
        {{ blog.title }}
    </h1>

    <h2 class="text-lg my-2">
        {{ blog.subtitle }}
    </h2>

    <p class="my-4">
        {{ blog.text }}
    </p>

    <div class="flex flex-wrap gap-4 mb-10">
        {% for image in images %}
            <div class="relative">
                <a href="{{ asset('uploads/blog/image/' ~ image) }}"
                   target="_blank"
                >
                    <img class="w-32 h-32 rounded-2xl hover:animate-pulse"
                         src="{{ asset('uploads/blog/image/' ~ image) }}"
                    >
                </a>

                    <form method="post"
                          action="{{ path('app_blog_remove_image', {'id': blog.id, 'index': loop.index0}) }}"
                          onsubmit="return confirm('Are you sure you want to delete this image?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('edit' ~ blog.id) }}">
                        <button class="absolute -top-2 -right-2 bg-red-800 text-white p-2 rounded-xl ">
                            X
                        </button>
                    </form>

            </div>

        {% endfor %}
    </div>


    {{ include('blog/_form.html.twig', {'button_label': 'Update'}) }}

    <a href="{{ path('app_account') }}">Back to account page</a>

{% endblock %}
