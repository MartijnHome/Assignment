{% extends 'base.html.twig' %}

{% block title %}New Blog{% endblock %}

{% block content %}
    {% for flash_error in app.flashes('upload_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1 class="text-3xl mb-4">Create new Blog</h1>
    <p class="mb-4">
        Please fill out this form to get started. After submitting you will be taken to the blog editor, where you can make
        changes, add or remove images and add descriptions to them.
    </p>

    {{ include('blog/_form.html.twig') }}

    <a href="{{ path('app_account') }}">Back to account page</a>
{% endblock %}
