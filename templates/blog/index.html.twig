{% extends 'base.html.twig' %}

{% block title %}Blog index{% endblock %}

{% block content %}
    <h1 class="text-2xl mb-32">
        Blog index
    </h1>

    {% for blog in blogs %}
        <a href="{{ path('app_blog_show', {'id': blog.id}) }}"
           class="hover:text-amber-600"
        >
            <div class="mb-32">
                <img class="h-80 w-full rounded-2xl rounded-2xl"
                     src="{{ asset('uploads/blog/image/' ~ blog.getMainImage()) }}"
                >

                <h1 class="text-2xl my-2">
                    {{ blog.title }}
                </h1>

                <h2 class="text-lg my-2">
                    {{ blog.subtitle }}
                </h2>

                <p>
                    Gemaakt door {{ blog.user.name }}
                    op {{ blog.publishDate ? blog.publishDate|date('Y-m-d H:i:s') : '' }}
                </p>
            </div>
        </a>
    {% else %}
        <p>No blogs found</p>
    {% endfor %}

    <a href="{{ path('app_blog_new') }}">Create new</a>
{% endblock %}
