{% extends 'base.html.twig' %}

{% block title %}Account{% endblock %}

{% block content %}
    <h1 class="text-2xl mb-10">
        Welcome {{ user.name }}
    </h1>
    <div class="flex-none w-32 h-32 rounded-full shadow-xl my-4 border-4 border-amber-600">
        {% if user.avatar %}
            <img class="h-full w-full object-cover object-center rounded-full" src="{{ asset('uploads/avatar/image/' ~ user.avatar.filename) }}">
        {% else %}
            <img src="{{ asset('img/avatar/1.png') }}">
        {% endif %}
    </div>
    <div>
        {{ form_start(avatarForm) }}
        <button class="btn bg-amber-600 text-white p-2 rounded-xl m-2">
            Submit
        </button>
        {{ form_end(avatarForm) }}
    </div>
    <a href="{{ path('app_account') }}"
       class="hover:text-amber-200"
    >
        <button class="bg-amber-600 text-white p-2 rounded-full m-2 mb-10">
            Go back to account page
        </button>
    </a>
    <h2 class="text-xl mb-10">
        Profile:
    </h2>
    {{ form_start(userForm) }}
    {{ form_rest(userForm) }}
    <button class="btn bg-amber-600 text-white p-2 rounded-xl">
        Submit
    </button>
    {{ form_end(userForm) }}
    <div class="w-full">
        {{ user.biography }}
    </div>
{% endblock %}
